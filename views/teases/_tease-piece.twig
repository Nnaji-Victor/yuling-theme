{% extends "teases/tease.twig" %}

{% block content %}
	<a href="{{post.link}}">
		{% if post.thumbnail %}
			<img data-src="{{post.thumbnail.src|resize(500, 500)}}" alt="{{post.post_title}} Thumbnail" src="{{placeholder}}" class="lazyload">
		{% else %}
			{# TODO: replace this with something we serve. #}
			<img src="http://placehold.it/500x500" alt="Default Thumbnail">
		{% endif %}
		<h4 class="tease-title">{{post.post_title}}</h4>
		<p>{{post.header_tagline}}</p>
		{% include 'utility/svg.twig' with { prefix: 'icon', file: 'arrow-right' } %}
	</a>
{% endblock %}