{% extends "singles/single.twig" %}

{% block content %}
	
	{% if post.client %}
		<div class="contain--sm text-center">
			<p>Client: {{post.client_link ? '<a href="' ~ post.client_link ~ ' target="blank">'}}{{post.client}}{{post.client_link ? '</a>'}}</p> 
		</div>
	{% endif %}

	<div class="contain--md">
		{% include 'partials/_gallery.twig' with { gallery: post.get_field('gallery') } %}
	</div>
	
	{% for block in post.get_field('blocks') %} 
		{% include 'blocks/block-logic.twig' %}
	{% endfor %}
{% endblock %}