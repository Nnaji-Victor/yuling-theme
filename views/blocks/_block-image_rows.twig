{% extends "blocks/block.twig" %}

{% block content %}

<div class="contain--md">
	<div class="teaser lazyload">
		
		{% for row in block.images %}

			{% if row.acf_fc_layout == 'single_image' %}
				<div class="image-row -single">
					{% set image = TimberImage(row.single_image) %}

					<div class="image-wrap -single">
					<img 
						data-sizes="auto"
						data-srcset="{{image.url|resize(500)}} 500w,
							{{image.url|resize(800)}} 640w,
							{{image.url|resize(1200)}} 1024w"
							class="lazyload" 
							src="{{image.url|resize(500)}}" alt="{{image.title}}">
					</div>
				</div>
			{% else %}
				<div class="image-row -double">
					{% for image in row.two_images %}
						<div class="image-wrap -double">
						{% set image = TimberImage(image) %}
						<img 
							data-sizes="auto"
							data-srcset="{{image.src|resize(500)}} 500w,
								{{image.src|resize(800)}} 640w,
								{{image.src|resize(1200)}} 1024w"
								class="lazyload" 
								src="{{image.src|resize(500)}}" alt="{{image.title}}">
						</div>
					{% endfor %}
				</div>
		{% endif %}
	{% endfor %}
			{# <div class="gallery-thumb -block">
				<img 
					data-sizes="auto"
					data-srcset="{{image.url|resize(500)}} 500w,
						{{image.url|resize(800)}} 640w,
						{{image.url|resize(1200)}} 1024w"
						class="lazyload" 
						src="{{image.url|resize(500)}}" alt="{{image.title}}">
			</div> #}
		{# {% endfor %} #}

	</div>
</div>
{% endblock %}


