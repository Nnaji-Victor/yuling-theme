{% extends "blocks/block.twig" %}

{% block content %}

	{% set type = block.list_type %}
	{% set display = block.list_display %}

	{% if block.list_title %}
		<h3 class="list__title">{{block.list_title}}</h3>
	{% endif %}

	{% if block.list_description %}
		<p class="list__description">{{block.list_description}}</p>
	{% endif %}

	<ul class="block_list__list list--{{display}} list--{{type}} list--{{list|length}}">
		
		{% for item in block.list_type_freeform %}
			<li class="list__item--{{type}}">
				<h5 class="list__item__title">{{item.item_title}}</h5>
				<div class="list__item__desc">
					{{item.item_description}}
				</div>
				{% if display == 'major' %}
					{{item.item_image}}
				{% endif %}
			</li>
		{% endfor %}

		{% for item in block.list_type_connected_content %}
			<li>
				{% include 'teases/_tease-' ~ item.post_type ~ '.twig' with { post : item } %}
			</li>
		{% endfor %}
			
	</ul> <!-- /.list-{{display}} -->

{% endblock %}