{% extends 'headers/header.twig' %}

{% block header_content %}

<h1 class="title--site"><a href="{{site.link}}" title="{{site.name}}" rel="home">{{site.name}}</a>
</h1>

<nav id="access" class="nav--main" role="navigation">
    <ul class="nav-list nav-list--main">
    {% for item in menu.items %}
        <li class="nav-list-item">
            <a href="{{item.link}}">{{item.title}}</a>
            {% if item.get_children %}
            	<ul class="nav-list--subnav">
				{% for child in item.get_children %}
					<li class="nav-list-item--subnav">
						<a href="{{child.get_link}}">{{child.title}}</a>
					</li>
				{% endfor %}
				</ul>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
</nav><!-- #access -->

{% endblock %}