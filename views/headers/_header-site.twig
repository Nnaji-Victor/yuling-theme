{% extends 'headers/header.twig' %}

{% block header_content %}

<h1 class="title--site text-center"><a href="{{site.link}}" title="{{site.name}}" rel="home">{{site.name}}</a>
</h1>

<nav class="nav--site contain--lg" role="navigation">
    <ul class="nav__items items--inline">
    {% for item in menu.items %}
        <li class="nav__item">
            <a class="nav__item__link"href="{{item.link}}">{{item.title}}</a>
            {% if item.get_children %}
            	<ul class="nav__items">
				{% for child in item.get_children %}
					<li class="subnav__item">
						<a class="subnav__item__link" href="{{child.get_link}}">{{child.title}}</a>
					</li>
				{% endfor %}
				</ul>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
</nav><!-- #access -->

{% endblock %}