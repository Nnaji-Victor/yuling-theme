{% extends 'headers/header.twig' %}

{% block header_content %}

{% include 'utility/svg.twig' with { file: 'text-logo', prefix: 'logo' } %}

<nav class="nav -util">
    <div class="contain--lg clearfix">
    <div class="search-wrap">
        {% include 'partials/search-form.twig' %}
    </div>
    <a href="#" class="wishlist-link">My wish list (X)</a>
    </div>
</nav>
  
<nav class="nav -site" role="navigation">
    <a href="#" class="nav-item-link" id="navOpenLink">Menu</a>
    <ul class="nav-list -site" id="toggleNav">
    {% for item in menu.items %}
        <li class="nav-item -site {{ item.get_children ? 'has-subnav' }}">
            <a class="nav-item-link -site" href="{{item.link}}">{{item.title}}{% if item.get_children %}{% include 'utility/svg.twig' with { file: 'arrow-down', prefix: 'icon' } %}{% endif %}</a>
            {% if item.get_children %}
                <div class="subnav-wrapper -site">
                    <ul class="subnav-list -site">
                    {% for child in item.get_children %}
                        <li class="subnav-item -site">
                            <a class="subnav-item-link -site" href="{{child.get_link}}">
                                <img data-src="{{TimberImage(child.featured_image).src|resize(400)}}" src="{{child.featured_image}}" class="lazyload" alt="{{child.name}} Thumbnail">
                                {{child.title}}
                            </a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
</nav><!-- #access -->

{% endblock %}