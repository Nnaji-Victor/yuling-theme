{% extends 'headers/header.twig' %}

{% block before_header_content %}{% endblock %}

{% block header_content %}
	
	<div class="slider">
		{% for image in term.collection_gallery %}
			<img data-src="{{image.url|resize(1200)}}" class="slider-img -full lazyload" src="{{image.url|resize(500)}}" alt="{{image.title}}">
		{% endfor %}
	</div>
	
	<div class="contain--sm text-center">
		<h1 class="archive-title">{{term.name}}</h1>
		<p class="archive-desc">{{term.below_title}}</p>
		<p>{{term.long_description}}</p>
	</div>

{% endblock %}

{% block after_header_content %}{% endblock %}
