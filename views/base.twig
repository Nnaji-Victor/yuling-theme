{% block html_head_container %}
{% include 'html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

    <body class="{{body_class}} wf-loading" data-template="base.twig" id="pageTop">
        
        {% block header %}
            {% include 'headers/_header-site.twig' with { class: 'header--site', role: 'banner', contain: 'contain' } %}
        {% endblock %}      
        
        <main id="content" class="main contain" role="main">

            {# TODO: This may not always work. Watch out. #}
            {# {% include 'headers/_header-' ~ post.post_type ~ '.twig' %} #}
            {% include 'headers/_header-lesson.twig' %}
            
            <div class="page-body">

                {% block before_content %}{% endblock %}

                {% block content %}
                    Sorry, no content
                {% endblock %}

                {% block after_content %}{% endblock %}

            </div>

            {% if sidebar %}
                <aside class="layout-sidebar">
                    {{sidebar}}
                </aside>
            {% endif %}

        </main>

        {% block footer %}

            <footer id="footer" class="site-footer" role="contentinfo">
                <div class="contain">
                    {% include 'footers/_footer-site.twig' %}    
                </div>
            </footer>

            {{ function('wp_footer') }}
            
        {% endblock %}

    </body>
</html>
