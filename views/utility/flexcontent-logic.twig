{% for block in section.blocks %}

    {% set block_class = block.acf_fc_layout %}

    {% if block.acf_fc_layout == 'block_text' %}
        {% include 'blocks/block-text.twig' %}
    {% elseif block.acf_fc_layout == 'block_textimage' %}
        {% include 'blocks/block-textimage.twig' %}
    {% elseif block.acf_fc_layout == 'block_related_page' %}
        {% include 'blocks/block-related.twig' %}
    {% elseif block.acf_fc_layout == 'block_blank' %}
        {% include 'blocks/block-blank.twig' %}
    {% elseif block.acf_fc_layout == 'block_list' %}
        {% include 'blocks/block-list.twig' %}
    {% elseif block.acf_fc_layout == 'block_cta' %}
        {% include 'blocks/block-cta.twig' %}
    {% elseif block.acf_fc_layout == 'block_testimonial' %}
        {% include 'blocks/block-testimonial.twig' %}
    {% endif %}

{% endfor %}