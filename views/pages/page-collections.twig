{% extends "base.twig" %}

{% block content %}

	{% include 'headers/_header-page.twig' with { h_class: 'header--page' } %}

	<header class="page-header">
		<h2>{{post.title}}</h2>
		<p class="page-tagline">{{post.summary}}</p>
	</header>

	{% for c in terms %}
		{% set feat = TimberImage(c.featured_image) %}
		<section class="archive-details">
			{% include 'partials/_large-feat-img.twig' with { img : feat, class : 'archive-details-img' } %}

			<div class="archive-details-block">
				<div class="contain--md">
					<h4 class="archive-details-title">{{c.description_title}}</h4>
					<blockquote class="archive-details-quote">
						{{c.long_description}}
					</blockquote>
					<a class="btn -readmore" href="{{c.link}}" title="{{c.title}}">See {{c.title}}</a>
				</div>
			</div>
		</section>

		<section class="archive-images">
			<div class="archive-images-wrap">

				<div class="archive-featured">
					{% include 'partials/_large-feat-img.twig' with { img : feat } %}
				</div>
				
				<div class="archive-inspiration">
					<h4 class="detail-title">Inspiration on Pinterest</h4>
					{% include 'partials/_gallery.twig' with { gallery: c.inspiration_gallery, gall_class : 'inspiration', class : 'inspiration' } %}
				</div>

			</div>
		</section>
	{% endfor %}
	
{% endblock %}