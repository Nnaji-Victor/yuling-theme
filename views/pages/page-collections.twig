{% extends "base.twig" %}

{% block content %}

	{# {% include 'headers/_header-page.twig' with { h_class: 'header--page' } %} #}

	<header class="page-header -collections-archive text-center contain--sm">
		<h1>{{post.title}}</h1>
		<p class="page-tagline">{{post.header_tagline}}</p>
	</header>

	{# <div class="archive-container"> #}
	
	{% for c in terms %}
	
		{% set feat = TimberImage(c.featured_image) %}
	
		<section class="archive-quote" data-title="{{c.title}}">
			<div class="cell">
				<div class="contain--lg archive-quote-inner">
					<h4 class="archive-quote-title">{{c.description_title ? c.description_title : "Title Here"}}</h4>
					<blockquote class="archive-quote-content">
						{{c.long_description}}
					</blockquote>
					<a class="btn -readmore" href="{{c.link}}" title="{{c.title}}">See {{c.title}}</a>
				</div>
			</div>

		</section> <!-- /.archive-quote -->

		<section class="archive-images" data-title="{{c.title}}">
			<div class="archive-images-inner">

				<div class="archive-images-featured">
					{% include 'partials/_large-feat-img.twig' with { img : feat } %}
				</div>
				
				<div class="archive-images-inspiration">
					{# <h4 class="detail-title">Inspiration on Pinterest</h4> #}
					
					<div class="gallery -inspiration teaser">
						{% set gallery = c.inspiration_gallery %}
						{% for image in gallery %}
							<div class="gallery-thumb -inspiration">
								<img data-src="{{image.url|resize(1000)}}" src="{{image.url|resize(100, 100)}}" class="lazyload" alt="{{image.title}}">
							</div>
						{% endfor %}

					</div>
				</div>

			</div>
		</section> <!-- /.archive-images -->
	{% endfor %}
	
{% endblock %}