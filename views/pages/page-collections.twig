{% extends "base.twig" %}

{% block content %}

	<header class="banner" style="background-image: url('{{TimberImage(cover_image).src|resize(800)}}');">

		<div class="banner-border">
			<div class="banner-wrap">
				<div class="banner-logos">
					{% include 'utility/svg.twig' with { file : 'wordmark', prefix : 'wordmark' } %}
		            {% include 'utility/svg.twig' with { file: 'text-logo', prefix: 'logo' } %}
	            </div>
				<h1 class="banner-title">{{post.title}}</h1>
				<p class="banner-tagline">{{post.header_summary}}</p>
			</div>
			<div class="banner-prompt">
				<p class="banner-prompt-text">Discover More</p>
		    	{% include 'utility/svg.twig' with { file: 'arrow-down', prefix: 'icon' } %}
			</div>
		</div>
	</header>

	{% for c in terms %}
	
		{% set feat = TimberImage(c.featured_image) %}
	
		<section class="archive-quote" data-title="{{c.title}}">
			<div class="cell">
				<div class="archive-quote-inner">
					<h4 class="archive-quote-title">{{c.description_title ? c.description_title : "Title Here"}}</h4>
					<blockquote class="archive-quote-content{{ loop.index == 1 ? ' -first'}}">
						{{c.long_description}}
					</blockquote>
					<a class="btn -readmore" href="{{c.link}}" title="{{c.title}}">See {{c.title}}</a>
				</div>
			</div>
		</section> <!-- /.archive-quote -->

		<section class="archive-images teaser lazyload" data-title="{{c.title}}">
			<div class="archive-images-inner">

				<div class="archive-images-featured">

						<figure class="gallery-thumb">
							{% include 'partials/_large-feat-img.twig' with { img : feat } %}
							<figcaption class="thumb-caption -hoverable -collection">
								<a href="{{c.link}}">
								See the entire {{c.title}} Collection	
								</a>
							</figcaption>
						</figure>

				</div>
				
				<div class="archive-images-inspiration -first">
					
					<div class="gallery -inspiration">
						{% set gallery = c.inspiration_gallery %}
						{% for image in gallery|slice(0,2) %}
							{% include 'partials/gallery-thumb.twig' %}
						{% endfor %}
					</div>
				</div>

				<div class="archive-images-inspiration -second{{ loop.last ? ' -last' }}">
					
					<div class="gallery -inspiration">
						{% for image in gallery|slice(2,4) %}
							{% include 'partials/gallery-thumb.twig' %}
						{% endfor %}
					</div>

				</div>

			</div>
		</section> <!-- /.archive-images -->

	{% endfor %}
	
{% endblock %}