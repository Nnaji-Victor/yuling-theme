
<ul class="widget-list -sidebar">
	<li class="widget widget_categories -sidebar">
		<h4 class="widget-title -sidebar">{{projects_category_list_title}}</h4>		
		<ul>
			{% for c in projects_sidebar_categories %}
				{% set c = TimberTerm(c) %}
				<li><a href="{{c.link}}?post_type=project">{{c.name}}</a></li>
			{% endfor %}
		</ul>
	</li>
	<li class="widget widget_categories -sidebar">
		<h4 class="widget-title -sidebar">{{projects_industry_list_title}}</h4>		
		<ul>
			{% for i in industries %}
				<li><a href="{{i.link}}?post_type=project">{{i.name}}</a></li>
			{% endfor %}
		</ul>
	</li>
</ul>